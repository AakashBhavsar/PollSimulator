<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="css/app.css">
    <title>Add Candidates</title>
</head>

<body>
    <div class="form-group center">
        <h1>Add Candidate</h1>
        <form class="form-control" action="/addNew" method="POST">
            <div>
                <label>Student Id</label>
                <input type="text" class="form-control" name="studentid" placeholder="Enter student id">
            </div>
            <div>
                <label>Student Name</label>
                <input type="text" class="form-control" name="studentname" placeholder="Enter student name">
            </div>
            <br>
            <button type="submit" class="btn btn-outline-primary">Submit</button>
        </form>
    </div>
    <table class='table table-responsive table_center'>
        <thead class="thead-dark">
            <tr>
                <th>Student ID</th>
                <th>Student Name</th>
            </tr>
        </thead>
        <tbody>
            <% candidate.forEach(data =>{ %>
                <tr>
                    <td>
                        <%= data.ID %>
                    </td>
                    <td>
                        <%= data.name %>
                    </td>
                </tr>
                <% }) %>

        </tbody>
    </table>
    <br>
    <a href="/" class="link_button">Home</a>
</body>

</html>